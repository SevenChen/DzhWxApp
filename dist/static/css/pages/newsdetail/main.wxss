.nav:after {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: -webkit-linear-gradient(bottom, #e5e5e5 60%, transparent 60%) no-repeat left bottom;
  background: linear-gradient(bottom, #e5e5e5 60%, transparent 60%) no-repeat left bottom;
  -webkit-background-size: 100% 2rpx;
  background-size: 100% 2rpx;
  z-index: -1;
}
.tag:after {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
  width: 200%;
  height: 200%;
  border: 2rpx solid #fa1635;
  border-radius: 16rpx;
  transform: scale(0.5);
  transform-origin: left top;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
}
.stocks ._span:after {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
  width: 200%;
  height: 200%;
  border: 2rpx solid #8e9ab7;
  border-radius: 100rpx;
  transform: scale(0.5);
  transform-origin: left top;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
}
.comments:before {
  content: '';
  position: absolute;
  left: 0;
  top: 10%;
  width: 100%;
  height: 80%;
  background: -webkit-linear-gradient(left, #d1d6e0 60%, transparent 60%) no-repeat left top;
  background: linear-gradient(left, #d1d6e0 60%, transparent 60%) no-repeat left top;
  -webkit-background-size: 2rpx 100%;
  background-size: 2rpx 100%;
  z-index: -1;
}
.detail {
