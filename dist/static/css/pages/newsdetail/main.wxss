}
.side-bar {
  position: fixed;
  right: 0;
  bottom: 0;
  z-index: 10;
}
.right-bar {
  position: absolute;
  right: 20rpx;
  background: -webkit-linear-gradient(top, #396afc 0%, #2948ff 100%) no-repeat 0 0;
  background: linear-gradient(top, #396afc 6%, #2948ff 100%) no-repeat 0 0;
  color: #fff;
  font-size: 26rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 1.2;
  -webkit-transition: bottom .2s;
  -o-transition: bottom .2s;
  transition: bottom .2s;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}
.right-bar1 {
  bottom: 380rpx;
  padding-top: 20rpx;
}
.right-bar2 {
  bottom: 260rpx;
  line-height: 100rpx;
}
.side-bar-icon {
  position: absolute;
  bottom: 180rpx;
  right: 42rpx;
  width: 56rpx;
  height: 56rpx;
  background: #fff;
  box-shadow: 0 0 20rpx #396afc;
  border-radius: 50%;
}
.side-bar-icon:after {
  content: '';
  position: absolute;
  top: 45%;
  left: 50%;
  width: 20rpx;
  height: 20rpx;
  border-left: 4rpx solid #2948ff;
  border-bottom: 4rpx solid #2948ff;
  -webkit-transform: translate(-50%,-50%) rotate(-45deg);
  -ms-transform: translate(-50%,-50%) rotate(-45deg);
  transform: translate(-50%,-50%) rotate(-45deg);
  border-radius: 0 0 0 6rpx;
}
.side-bar.foldUp .right-bar {
  bottom: 160rpx;
}
.side-bar.foldUp .side-bar-icon {
  width: 60rpx;
  height: 60rpx;
  bottom: 160rpx;
  right: 20rpx;
  padding: 20rpx;
}
.side-bar.foldUp .side-bar-icon:after {
  content: '\5FEB\6377\5BFC\822A';
  position: static;
  border: 0;
  color: #2948ff;
  width: auto;
  height: auto;
  font-size: 26rpx;
  padding-top: 2rpx;
  line-height: 1.2;
  text-align: center;
  display: block;
  -webkit-transform: inherit;
  -ms-transform: inherit;
  transform: inherit;
}